!!!
%html
  %head
    %title RubyMediaLibrary
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .navbar.navbar-default
      .container-fluid
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-center
            %li
              = link_to('Accueil', root_path)
            -# Afficher uniquement les catégories possédant des produits
            - unless(@types.nil?)
              - @types.each do |type|
                -if (type.produits.size != 0)
                  %li
                    = link_to type.name, list_produits_type_path(type)
          
          %ul.nav.navbar-nav.navbar-center.flagSection
            %li  
              = link_to image_tag("France-icon.png"), params.merge({:locale => :fr})
            %li
              = link_to image_tag("United-Kingdom-icon.png"), params.merge({:locale => :en})

          %ul.nav.navbar-nav.navbar-right
            -if(!user_signed_in?)
              %li
                = link_to('Connexion', new_user_session_url)
              %li
                = link_to('Enregistrement', new_user_registration_url)
            -else
              -if(current_user)
                %li
                  = link_to('Profil', edit_user_registration_url)
                %li
                  = link_to('Locations', list_locations_user_url(current_user))
              %li
                = link_to('Sign out', destroy_user_session_url, method: :delete)
    %p.notice= notice
    %p.alert= alert
    = yield